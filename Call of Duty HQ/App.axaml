<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Call_of_Duty_HQ.App"
             xmlns:local="using:Call_of_Duty_HQ"
			 xmlns:sty="using:FluentAvalonia.Styling"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
		<sty:FluentAvaloniaTheme/>
        <StyleInclude Source="Styles/Icons.axaml"/>
		<StyleInclude Source="/Styles/TextBlockStyles.axaml"/>
    </Application.Styles>
	<TrayIcon.Icons>
		<TrayIcons>
			<TrayIcon Icon="/Assets/WindowsLogo.ico"
					  ToolTipText="CoD HQ">
				<TrayIcon.Menu>
					<NativeMenu>
						<NativeMenuItem Header="Check for Updates" Click="UpdatesClick"/>
						<NativeMenuItem Header="Exit" Click="ExitMenuItem_Click"/>
					</NativeMenu>
				</TrayIcon.Menu>
			</TrayIcon>
		</TrayIcons>
	</TrayIcon.Icons>
</Application>