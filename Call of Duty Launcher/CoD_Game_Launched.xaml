<Window x:Class="Call_of_Duty_HQ.CoD_Game_Launched"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Call_of_Duty_HQ"
        mc:Ignorable="d"
        Title="Call of Duty HQ Message" Height="200.7" Width="400" MaxWidth="400" MaxHeight="200" Background="#FF1F1F1F" ResizeMode="NoResize" Icon="/Images/CallofDutyLogo.ico" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Height="25" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" TextAlignment="Center" Foreground="White" Margin="0,10,0,0"><Run Text="Your Call of Duty game instance should now be running"/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/></TextBlock>
        <TextBlock HorizontalAlignment="Center" Height="48" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" TextAlignment="Center" Foreground="White" Margin="0,42,0,0" Text="NOTICE: This Call of Duty game requires a valid license from Steam to run. If you do not have a valid license or never purchased the license for this game it will not run."/>
        <Button Content="Ok" HorizontalAlignment="Center" Height="25" Margin="0,121,0,0" VerticalAlignment="Top" Width="100" Click="Ok_Button_Clicked"/>

    </Grid>
</Window>
