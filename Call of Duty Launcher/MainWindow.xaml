<Window x:Class="Call_of_Duty_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Call_of_Duty_Launcher"
        mc:Ignorable="d"
        Title="HQ Updater" Height="150" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel x:Name="ContentBox">
        <TextBlock x:Name="MainText" Text="Checking for Updates..." Margin="10 0 0 10"/>
        <ProgressBar x:Name="MainBar" Height="25" Value="50" Margin="10 0 10 10"/>
        <Button Content="Cancel" Click="Button_Click" HorizontalAlignment="Right" MinWidth="100" VerticalAlignment="Bottom" Margin="0 25 10 0"/>
    </StackPanel>
</Window>
