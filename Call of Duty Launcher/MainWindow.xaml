<Window x:Class="Call_of_Duty_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Call_of_Duty_Launcher"
        mc:Ignorable="d"
            Title="Call of Duty HQ" Background="#FF1F1F1F" Icon="/Images/CallofDutyLogo.ico" MaxHeight="450" MaxWidth="800" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Height="826">
    <Grid Height="430" VerticalAlignment="Top">
        <ScrollViewer Margin="0,-9,0,0">
            <Grid Height="830" Width="800">
                <Image x:Name="Title_Image" Height="73" Source="/Images/CoD Logo.png" Stretch="Fill" Width="338" Margin="222,13,240,744"/>
                <Button Content="About" Height="45" Width="41" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click" Margin="14,10,0,0"/>
                <Button Content="Help" Height="45" Width="41" Click="Button_Click_Help" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="76,10,0,0"/>
                <TextBlock Margin="211,91,228,715" TextWrapping="Wrap" Text="This application depends on the Steam Launcher to work properly." Width="361" Foreground="White"/>
                <TextBlock Margin="352,120,382,682" TextWrapping="Wrap" Text="News" Width="65" Foreground="White" FontSize="24" FontWeight="Bold"/>
                <Image Margin="26,153,436,513" Source="/Images/News_Images/MWIII-REVEAL-BLANKCANVAS-001.jpg" Stretch="Fill"/>
                <TextBlock HorizontalAlignment="Left" Height="54" Margin="34,322,0,0" TextWrapping="Wrap" Text="Call of Duty Modern Warfare III Brings Back Many Loved Maps" VerticalAlignment="Top" Width="321" Foreground="White" FontWeight="Bold" FontSize="18" TextAlignment="Center"/>
                <Image Margin="340,376,370,399" Source="/Images/Arrow_Down.gif" Stretch="Fill"/>
                <Grid Margin="0,469,0,0">
                    <TextBlock HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" Text="Games" VerticalAlignment="Top" Width="88" TextAlignment="Center" FontSize="24" Foreground="White" Margin="0,10,0,0" FontWeight="Bold"/>
                    <Button x:Name="___CallofDutyLaunch_" Content="Call of Duty" HorizontalAlignment="Left" Height="23" Margin="394,198,0,0" VerticalAlignment="Top" Width="175" Click="___CallofDutyLaunch_Clicked"/>
                    <Button x:Name="___CallofDutyLaunchUO__" Content="Call of Duty: United Offensive" HorizontalAlignment="Left" Height="23" Margin="214,198,0,0" VerticalAlignment="Top" Width="175" Click="___CallofDutyLaunchUO__Clicked"/>
                    <Button x:Name="___CallofDutyLaunch2__" Content="Call of Duty 2" HorizontalAlignment="Left" Height="23" Margin="34,198,0,0" VerticalAlignment="Top" Width="175" Click="___CallofDutyLaunch2__Clicked"/>
                    <Button x:Name="___CallofDutyLaunch___BO" Content="Call of Duty: Black Ops" Height="23" Margin="34,163,591,175" Width="175" Click="___CallofDutyLaunch___BO_Clicked"/>
                    <Button x:Name="___CallofDutyLaunch___MW3" Content="Call of Duty: Modern Warfare 3" HorizontalAlignment="Left" Height="23" Margin="574,128,0,0" VerticalAlignment="Top" Width="175" Click="___CallofDutyLaunch___MW3_Clicked"/>
                    <Button x:Name="___CallofDutyLaunch___BO_2" Content="Call of Duty: Black Ops II" HorizontalAlignment="Left" Height="23" Margin="394,128,0,0" VerticalAlignment="Top" Width="175" Click="___CallofDutyLaunch___BO_2_Clicked"/>
                    <Button x:Name="___CallofDutyLaunch___G" Content="Call of Duty: Ghosts" Height="23" Margin="214,128,411,210" Width="175" Click="___CallofDutyLaunch___G_Clicked"/>
                    <Button x:Name="___CallofDutyLaunch__MW_19" Content="Call of Duty: Modern Warfare" HorizontalAlignment="Left" Height="23" Margin="574,47,0,0" VerticalAlignment="Top" Width="175" Click="___CallofDutyLaunch__MW_19_Clicked"/>
                    <Button x:Name="___CallofDutyLaunch__MW2_22" Content="Call of Duty: Modern Warfare II" HorizontalAlignment="Left" Height="23" Margin="214,47,0,0" VerticalAlignment="Top" Width="175" Click="___CallofDutyLaunch__MW2_22_Clicked"/>
                    <Button x:Name="___CallofDutyLaunch___AW" Content="Call of Duty: Advanced Warfare" Height="23" Margin="34,128,591,210" Width="175" Click="___CallofDutyLaunch___AW_Clicked"/>
                    <Button x:Name="___CallofDutyLaunch___MW1" Content="Call of Duty 4: Modern Warfare" HorizontalAlignment="Left" Height="23" Margin="574,163,0,0" VerticalAlignment="Top" Width="175" Click="___CallofDutyLaunch___MW_Clicked"/>
                    <Button x:Name="___CallofDutyLaunch___WaW1" Content="Call of Duty: World at War" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="175" Margin="394,163,0,0" Click="___CallofDutyLaunch___WaW_Clicked"/>
                    <Button x:Name="___CallofDutyLaunch___MW2" Content="Call of Duty: Modern Warfare 2" HorizontalAlignment="Left" Height="23" Margin="214,163,0,0" VerticalAlignment="Top" Width="175" Click="___CallofDutyLaunch___MW2_Clicked"/>
                    <Button x:Name="___CallofDutyLaunch___BO_3" Content="Call of Duty: Black Ops III" HorizontalAlignment="Left" Height="23" Margin="574,88,0,0" VerticalAlignment="Top" Width="175" Click="___CallofDutyLaunch___BO_3_Clicked"/>
                    <Button x:Name="___CallofDutyLaunch___IW" Content="Call of Duty: Infinite Warfare" HorizontalAlignment="Left" Height="23" Margin="394,88,0,0" VerticalAlignment="Top" Width="175" Click="___CallofDutyLaunch___IW_Clicked"/>
                    <Button x:Name="___CallofDutyLaunch___WW2" Content="Call of Duty: WWII" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="175" Margin="214,88,0,0" Click="___CallofDutyLaunch___WW2_Clicked"/>
                    <Button x:Name="___CallofDutyLaunch___BOCW" Content="Call of Duty: Black Ops Cold War" HorizontalAlignment="Left" Height="23" Margin="34,88,0,0" VerticalAlignment="Top" Width="175" Click="___CallofDutyLaunch___BOCW_Clicked"/>
                    <Button x:Name="___CallofDutyLaunch__VG" Content="Call of Duty: Vangaurd" HorizontalAlignment="Left" Height="23" Margin="394,47,0,0" VerticalAlignment="Top" Width="175" Click="___CallofDutyLaunch__VG_Click"/>
                    <Button x:Name="___CallofDutyLaunch__MW3_23" Content="Call of Duty: Modern Warfare III" HorizontalAlignment="Left" Height="23" Margin="34,47,0,0" VerticalAlignment="Top" Width="175" Click="___CallofDutyLaunch__MW3_23_Clicked"/>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
