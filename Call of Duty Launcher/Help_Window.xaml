<Window x:Class="Call_of_Duty_HQ.Help_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Call_of_Duty_HQ"
        mc:Ignorable="d"
        Title="Call of Duty HQ Help Menu" Height="470" Width="800" Background="#FF1F1F1F" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Icon="/Images/CallofDutyLogo.ico">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Height="31" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" FontSize="20" Foreground="White" TextAlignment="Center" Text="Call of Duty Help" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Center" Height="84" Margin="0,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="460" FontSize="20" Foreground="White" TextAlignment="Center" Text="This is where you will find any answers to any issues you might be experiencing with the launcher. Press a button to find an answer."/>
        <Button Content="Back" HorizontalAlignment="Left" Height="44" Margin="10,10,0,0" VerticalAlignment="Top" Width="51" Click="Back_Clicked"/>
        <TextBlock HorizontalAlignment="Left" Height="36" Margin="10,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="343" FontSize="20" Foreground="White" Text="My game won't launch with Battle Net"/>
        <TextBlock HorizontalAlignment="Left" Height="46" Margin="10,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="343" FontSize="16" Foreground="White" Text="This launcher is dependent on Steam not Battle Net."/>
        <TextBlock HorizontalAlignment="Left" Height="36" Margin="10,227,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="343" FontSize="20" Foreground="White" Text="My game won't launch through Steam"/>
        <TextBlock HorizontalAlignment="Left" Height="153" Margin="10,263,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="343" FontSize="16" Foreground="White"><Run Text="Please make sure you have one of the following"/><LineBreak/><Run Text=" • You have the game you wish to run installed"/><LineBreak/><Run Text=" • You have a valid license for the game"/><LineBreak/><Run Text=" • You own the game (This doesn't allow pirated games of Call of Duty to be used)"/><LineBreak/><Run Text=" • If you own the game and is installed try reinstalling the game."/><LineBreak/><Run/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="36" Margin="400,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="343" FontSize="20" Foreground="White" Text="My game won't launch with Steam"/>
        <TextBlock HorizontalAlignment="Left" Height="74" Margin="400,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="343" FontSize="16" Foreground="White" Text="This launcher only uses the default location of the Steam installation. Also make sure actually have Steam installed."/>
        <TextBlock HorizontalAlignment="Left" Height="36" Margin="400,252,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="343" FontSize="20" Foreground="White" Text="What if it's none of these things?"/>
        <TextBlock HorizontalAlignment="Left" Height="74" Margin="400,288,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="343" FontSize="16" Foreground="White" Text="Then please add an issue to the GitHub repository and I will do my best to help. Plus my help you as well."/>
        <Button Content="GitHub Repository" HorizontalAlignment="Left" Height="28" Margin="610,396,0,0" VerticalAlignment="Top" Width="169" Click="repobutton_Clicked"/>
    </Grid>
</Window>
